#!/usr/bin/env bash

# Fail fast and fail hard.
set -eo pipefail

# shared logic
SCRIPT_DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"
. "${SCRIPT_DIR}/../share/compile/common"

# common parameters
if [ $# -lt 2 ]
then
	echo "usage: exec sandbox command [optional-command-args...]"
	exit 2
fi

sandbox_id=$1
cmd=$2

compile_kit_exec $sandbox_id $cmd $3 $4